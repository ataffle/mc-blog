<div class="main-container">
  <h1>Simplifier et s√©curiser la location</h1>
  <div class="cards">
    <% @posts.each do |post| %>
      <div class="card">
        <%= image_tag "post3.jpg", class: "images" %>
        <div class="details">
          <a href="#" class="orange"><%= post.category.title %></a>
          <p>&nbsp- 27 mai 2020</p>
        </div>
        <div class="title">
          <h2><a href="#"><%= post.title  %></a></h2>
        </div>
        <div class="summary">
          <p><%= post.content %></p>
        </div>
        <div class="author">
          <%= image_tag "Alix.jpg", class: "avatar-large" %>
          <div class="role">
            <a href=""><%= post.user.full_name %></a>
            <p><%= post.user.title %> @ MorningCroissant</p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>


