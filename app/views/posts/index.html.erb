<div class="main-container">
  <h1>Simplifier et sécuriser la location</h1>
  <div class="cards">
    <% @posts.each do |post| %>
      <div class="card">
        <%= image_tag "logo.png", width: 200 %>
        <h2><%= post.title  %></h2>
        <p>Catégorie: <%= post.category.title %></p>
        <p><%= post.content %></p>
        <p>De : <%= post.user.email %></p>
        <br>
      </div>
    <% end %>
  </div>
</div>


